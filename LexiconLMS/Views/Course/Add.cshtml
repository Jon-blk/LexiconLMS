@model AddCourseViewModel

@{
    ViewData["Title"] = "Add Course";
}

<h4>Add Course</h4>
<hr />
<div class="row">
    <div class="col-md-6">

        <form asp-action="Add">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-primary">Add Course</button>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="FormattedTeachers" class="control-label"></label>
                <select asp-for="TeacherId" asp-items="@Model.FormattedTeachers" class="form-control">
                    <option value="0">None</option>
                </select>
                <span asp-validation-for="Teachers" class="text-danger"></span>
            </div>
            <input asp-for="TeacherId" type="hidden" />
            @Html.HiddenFor(m => m.Teachers)
        </form>

    </div>
</div>


