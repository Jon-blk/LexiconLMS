<hr />
<div>
    <a asp-action="Create" asp-controller="ActivityDocument" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary"><i class="fas fa-file-upload"></i> Add Document</a>
</div>
<table class="table table-light" data-toggle="table">
    <tbody>
        @foreach (var document in Model.Documents)
        {
            <tr>
                <td><i class="fas fa-file-download"></i> @Html.ActionLink(document.Name, "Display", "ActivityDocument", new { id = document.Id }) (@document.Filezise)</td>
                <td><i class="fas fa-info-circle"></i> @document.Description</td>
                <td><i class="fas fa-clock"></i> @Html.DisplayFor(d => document.UploadTime)</td>
                <td>
                    <div class="btn btn-grey btn-sm">
                        <a href="@Url.Action("Delete", "ActivityDocument", new { id = document.Id })" class="text-white"><i class="fa fa-trash" aria-hidden="true"></i>Remove</a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
