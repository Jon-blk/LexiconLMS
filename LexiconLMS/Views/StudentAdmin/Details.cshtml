@model LexiconLMS.ViewModels.UserAdminViewModel

@{
    ViewData["Title"] = "Student Account Details";
}

<h1 style="color:  #6e3694">@ViewData["Title"]</h1>

<hr />
<div>
    @*<h4 >Details</h4>*@
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Teacher")) { 
    <a asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Remove account" class="btn btn-red" />
    </a>
    }
    <a class="btn btn-green" asp-action="Edit" role="button" asp-route-id="@Model.Id">Edit details</a>
</div>

