@model LexiconLMS.ViewModels.UserAdminViewModel

@{
    ViewData["Title"] = "Teacher Account Details";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div>
    <h4>Details</h4>

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Remove account" class="btn btn-grey"/>
    </a>
    <a class="btn btn-purple" asp-action="Edit" role="button" asp-route-id="@Model.Id"><i class="fa fa-edit"></i>Edit details</a>
</div>

